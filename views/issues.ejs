  <body>
    <div class="topnav">
<div class="dropdown">
 <div class="align-right">
<a href="/login/dashboard">   <button class="dropbtn">Hi <%=name%>!</button></a>
  <div class="dropdown-content">
    <a href="/login/profile">Profile Update</a>
